<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.wowwee.chip_android_sampleproject.fragment.SpeechAce">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:background="#ffffff">

        <TextView
            android:id="@+id/topTV"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"

            android:gravity="center_horizontal"
            android:text="Session"
            android:textAlignment="center"
            android:textSize="30sp"/>
            <!--app:layout_constraintBottom_toBottomOf="@+id/sendRequest"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->


        <Spinner
            android:id="@+id/spinner_word_choice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:entries="@array/spinner_word_choice"
            android:prompt="@string/response_prompt"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/level"
            android:text="Level 0"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginStart="20sp"/>
            <!--app:layout_constraintBottom_toBottomOf="@+id/response"-->
            <!--app:layout_constraintEnd_toEndOf="@+id/response"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/response"
            android:layout_marginBottom="40dp"
            android:text="Total Score: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20sp"/>
            <!--app:layout_constraintBottom_toBottomOf="@+id/topTV"-->
            <!--app:layout_constraintStart_toStartOf="@+id/topTV"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->






        <!-- Row 1 with 2 columns -->
        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TextView04"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="20dp"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:text="Syllable"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/TextView0"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="20dip"
                android:text="Score"
                android:textColor="#000000" />



        </TableRow>


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="invisible"
            android:background="#000000"
            android:layout_weight="1">

            <TextView
                android:id="@+id/syllable1"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="20dp"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/score1"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="20dip"
                android:text=""
                android:textColor="#000000" />



        </TableRow>

        <!-- Row 3 with 3 columns -->


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="invisible"
            android:background="#000000"
            android:layout_weight="1">

            <TextView
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="20dp"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/syllable2"/>

            <TextView
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="20dip"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/score2"/>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="invisible"
            android:background="#000000"
            android:layout_weight="1">

            <TextView
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="20dp"
                android:layout_margin="1dp"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/syllable3"/>

            <TextView
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="20dip"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/score3"/>


        </TableRow>

        <Button
            android:id="@+id/sendRequest"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="80dp"
            android:text="Send Request"
            android:onClick="buttonTapped"/>
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->


        <Button
            android:id="@+id/backButton"
            android:text="Back"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"/>



    </TableLayout>

</ScrollView>