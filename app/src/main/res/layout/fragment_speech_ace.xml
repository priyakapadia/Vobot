

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.wowwee.chip_android_sampleproject.fragment.LearningSession">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">


        <TextView
            android:id="@+id/topTV"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"

            android:gravity="center_horizontal"
            android:text="LEARNING SESSION"
            android:textAlignment="center"
            android:textSize="30sp" />



        <Button
            android:id="@+id/sendRequest"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:enabled="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="sans-serif"
            android:text="START SESSION" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:enabled="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="sans-serif"
            android:text="BACK" />
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->


        <TextView
            android:id="@+id/spinnercaption"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:text="Please select a word: "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_word_choice"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:dropDownHeight="100dp"
            android:entries="@array/spinner_word_choice"
            android:prompt="@string/response_prompt"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/level"
            android:layout_marginStart="20sp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="Level: "/>


        <TextView
            android:id="@+id/response"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:text="Total Score: "
            android:textColor="#000000"
            android:textSize="15sp" />

